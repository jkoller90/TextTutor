
html
	head
		title= 'Person List'
		meta(name="viewport", content="width=device-width, initial-scale=1") 
		link(rel="stylesheet",href="https://code.jquery.com/mobile/1.4.3/jquery.mobile-1.4.3.min.css")
		style.
			h4 {
			background-color: aquamarine;
			padding: 3%;
			margin: 5%;
			}
			table {
			width: 70%;
			margin-left: 10%;
			margin-bottom: 5%;
			}
			td {
			background-color: cornsilk;
			}
			th {
			background-color: yellow;
			}
			#gradeTable {
			margin-bottom: 5%;
			}
		style
			include style.css
	body
		h4= 'Student Grades'
		#gradeTable
		table 
			tr
				td='Phone Number'
				td='Has Taken Quiz'
				td='Answered Correctly'
			for person in personList
				tr
					td= person.phonenumber
					td= person.hasTakenQuiz
					td= person.answeredCorrectly
		br
		button#refresh Refresh
		button#back Back
		h4 Extra Resources
		ul(data-role="listview")
			li
				a(href="http://www.dictionary.com/") Dictionary.com
			li
				a(href="http://www.thesaurus.com/") Thesaurus.com
			li
				a(href="https://plato.stanford.edu") Stanford Encyclopedia of Philosophy
			li
				a(href="https://www.wikipedia.org") Wikipedia
		script(src="https://code.jquery.com/jquery-1.11.1.min.js")
		script(src="https://code.jquery.com/mobile/1.4.3/jquery.mobile-1.4.3.min.js")
		script.
			$("#refresh").click(function(){
				location.reload();
			});
			$("#back").click(function(){
				window.location.replace("https://texttutortwil.herokuapp.com/admin");
			});
			